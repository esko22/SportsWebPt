<div class="row">
    <div class="col-md-4 pull-left">
        <h2 data-bind="text: routineName"></h2>
    </div>
    <div class="col-md-offset-6 col-md-2">
        <!-- ko with: $parent.shareBar -->
        @{Html.RenderPartial("~/Views/Shared/_shareBar.cshtml"); }
        <!-- /ko --> 
    </div>
</div>
<hr class="examine-report-hr"/>
<div class="row">
    <div class="col-md-5">
        <label><strong>Category: </strong><span data-bind="text: category"></span></label>
    </div>
</div>
<div class="row">
    <div class="col-md-7">
        <label>Description: </label><span data-bind="html: description"></span>
    </div>
    <div class="col-md-5">
        <!-- ko with: $parent.viewMedicaDisplay -->
        @{Html.RenderPartial("~/Views/Shared/_viewMedicaDisplay.cshtml"); }
        <!-- /ko --> 
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <label>Instructions:</label><span data-bind="html: instructions"></span>
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        <label><strong>Muscles Involved: </strong><span data-bind="text: musclesInvolved"></span></label>
    </div>
    <div class="col-md-5">
        <label><strong>Duration: </strong><span data-bind="text: duration"></span> minutes</label>
    </div>
</div>
<div class="tabbable" id="plan-exercise-tab-container">
    <ul data-bind="foreach: exercises" class="nav nav-tabs exercise-tab-nav">
        <li><a class="exercise-tab-item" data-bind="click: $parents[1].updateSelectedExercise, attr: { href: '#exercise', title: 'Exercise ' + $index() }, text: 'Exercise ' + ($index() + 1) " data-toggle="tab"></a></li>
    </ul>
    
    <div class="tab-content">
        <div class="tab-pane" data-bind="attr: { id: 'exercise' }">
            <!-- ko with: $parent.selectedExercise -->
                @{Html.RenderPartial("~/Views/Shared/_planExerciseDetail.cshtml"); }
            <!-- /ko --> 
        </div>
    </div>
</div>
