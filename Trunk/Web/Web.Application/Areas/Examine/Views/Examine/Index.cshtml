@model SportsWebPt.Platform.Web.Application.ExamineViewModel
@{
    Model.AreaBundles.Add("~/bundles/examineapplib");
    Layout = "~/Areas/Main/Views/Shared/_masterLayout.cshtml";
}

<div>
    <span aria-hidden="true" data-icon="&#xf0f1;" class="header-icon"> Examine</span> 
</div>
<div id="examine-container">
    <ul class="breadcrumb main-breadcrumb">
        <li><a href="#" id="skeleton-nav">Select Region(s)</a></li>
        <li><a href="#detail" id="detail-nav">Describe Discomfort</a></li>
        <li><a href="#report" id="report-nav">Potential Injuries</a></li>
    </ul>
</div>



<div class="container">
<div id="examine-skeleton" class="view">
    <div class="row">
        <div class="col-md-11 pull-left">
            <h3><strong>Please select up to <span data-bind="text: maxSelectableAreas"></span> areas of discomfort</strong></h3>
        </div>
        <div class="col-md-1 pull-right">
            @*<a class="btn btn-default btn-lg" href="#detail" >Next &raquo;</a>*@
        </div>
    </div>
    <div class="row push-down-md">
        <div class="col-md-2">
            <!-- ko if: selectedAreas().length > 0 -->
            
                <div style="height: 150px">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Selected Areas</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: selectedAreas">
                            <tr>
                                <td data-bind="text: displayName"></td>
                            </tr>
                        </tbody>            
                    </table>
                 </div>
            <div>
                <a class="btn btn-info btn-lg btn-block" href="#detail" >Next &raquo;</a>
            </div>
                <!-- /ko -->
            </div>
        <div class="col-md-10">
            <ul id="skeleton" data-bind="foreach: symptomaticRegions" class="img-rounded">
                <li data-bind="attr: { id: cssClassName }, click: $parent.selectArea, event: { mouseover: $parent.areaMouseOver, mouseout: $parent.areaMouseOut }, bootstrapPopover: { content: $parent.formatBodyParts($data), html: true, title: displayName, trigger: 'hover' }" />
            </ul>
        </div>
    </div>
</div>
        
    <div id="examine-detail" class="view container">
        <div>
            <h3><strong>Areas of Discomfort</strong></h3>
        </div>
        <div class="row push-down-md">
            <div class="col-md-3" id="discomfortAreas">
                <ul id="examine-detail-tab-nav" class="nav nav-pills nav-stacked" data-bind="foreach: selectedAreas">
                    <li><a data-bind="attr: { href: '#tab-' + id() }, text: displayName " data-toggle="tab"></a></li>
                </ul>
            </div>
            <div id="examine-detail-container" data-bind="template: { name: areaTemplate, afterRender: postTabRender, foreach: selectedAreas }" class="tab-content examine-tab-pane examine-symptom-tab-pane col-md-9"></div>
        </div>
        
        

        <div class="row examine-bottom-nav">
            <div class="col-md-2 pull-left">
                <a class="btn btn-default btn-lg" href="javascript:history.back()" >&laquo; Back</a>
            </div>
            <div class="col-md-2 pull-right">
                <button class="btn btn-default btn-lg" data-bind="click: submitDiscomfortDetail" >Next &raquo;</button>
            </div>
        </div>
    </div>
    
    
    <div id="examine-report" class="view container">
        <div>
            <h3><strong>Potential Injuries</strong></h3>
        </div>
        <div class="row push-down-md">
            <div class="col-md-2" id="injuryReport">
                <ul id="examine-report-tab-nav" class="nav nav-pills nav-stacked" data-bind="foreach: injuries">
                    <li><a data-bind="attr: { href: '#tab-' + id(), title: commonName }, text: commonName " data-toggle="tab"></a></li>
                </ul>
            </div>
            <div id="examine-report-container" data-bind="template: { name: injuryTemplate, afterRender: postTabRender, foreach: injuries }" class="tab-content examine-tab-pane examine-report-tab-pane col-md-10"></div>
        </div>
    </div>
</div>


<input type="hidden" id="skeleton-areas" value="@Html.Raw(Json.Encode(Model.SymptomaticRegions))" />



