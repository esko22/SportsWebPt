@model SportsWebPt.Platform.Web.Application.ExamineViewModel
@{
    Model.AreaBundles.Add("~/bundles/examineapplib");
    Layout = "~/Areas/Main/Views/Shared/_masterLayout.cshtml";
}

<div>
    <h2><span aria-hidden="true" data-icon="&#xf0f1;" class="header-icon" /> Examine</h2>
</div>
<div id="examine-container">
    <ul class="breadcrumb">
        <li><a href="#" id="skeleton-nav">Select Region(s)</a> <span class="divider">\</span></li>
        <li><a href="#describe" id="description-nav">Describe Discomfort</a> <span class="divider">\</span></li>
        <li><a href="#injuries" id="injuries-nav">Potential Injuries</a></li>
    </ul>
</div>



<div class="container">
    <div id="skeleton-container" class="view">
        <div>
            <h3><strong>Please select region(s) of discomfort</strong></h3>
        </div>
        <div class="row">
            <div class="span2">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Selected Regions</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: selectedAreas">
                        <tr>
                            <td data-bind="text: name"></td>
                        </tr>
                    </tbody>            
                </table>
            </div>
            <div class="span10">
                <ul id="skeleton" data-bind="foreach: symptomaticRegions" class="img-rounded">
                    <li data-bind="attr: { id: name }, click: $parent.selectArea, event: { mouseover: $parent.areaMouseOver, mouseout: $parent.areaMouseOut}" />
                </ul>
            </div>
        </div>
        <div class="pull-right">
            <a class="btn btn-inverse btn-large" href="#describe" >Next &raquo;</a>
        </div>
    </div>
        
    <div id="description-detail" class="view container">
        <div class="accordion" id="differentialDiagnosis">
            <div class="accordion-group" data-bind="foreach: selectedAreas">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#differentialDiagnosis" data-bind="attr: { href: '#accord-' + name(), title: name }, text: name "></a>
                </div>   
                <div data-bind="attr: { id: 'accord-' + name() }" class="accordion-body collapse">
                    <div class="accordion-inner">
                        <div data-bind="foreach: components">
                            <h3  data-bind="text: commonName"></h3>
                            <div data-bind="foreach: symptoms">
                                <h4  data-bind="text: description"></h4>
                                <label class="radio inline">
                                    <input type="radio" databind="attr: {name: $parent.id}" value="Not Really" />
                                    Not Really
                                </label>
                                <label class="radio inline">
                                    <input type="radio" databind="attr: {name: $parent.id}" value="Kinda" />
                                    Kinda
                                </label>
                                <label class="radio inline">
                                    <input type="radio" databind="attr: {name: $parent.id}" value="Fuck yeah" />
                                    Fuck yeah
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a class="btn btn-inverse btn-large" href="javascript:history.back()" >&laquo; Back</a>
        </div>
    </div>
</div>


<input type="hidden" id="skeleton-areas" value="@Html.Raw(Json.Encode(Model.SymptomaticRegions))" />



