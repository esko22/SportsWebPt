@model SportsWebPt.Platform.Web.Application.ExamineViewModel
@{
    Model.AreaBundles.Add("~/bundles/examineapplib");
    Layout = "~/Areas/Main/Views/Shared/_masterLayout.cshtml";
}

<div>
    <h2><span aria-hidden="true" data-icon="&#xf0f1;" class="header-icon" /> Examine</h2>
</div>
<div id="examine-container">
    <ul class="breadcrumb main-breadcrumb">
        <li><a href="#" id="skeleton-nav">Select Region(s)</a> <span class="divider">\</span></li>
        <li><a href="#detail" id="detail-nav">Describe Discomfort</a> <span class="divider">\</span></li>
        <li><a href="#report" id="report-nav">Potential Injuries</a></li>
    </ul>
</div>



<div class="container">
<div id="examine-skeleton" class="view">
    <div>
        <h3><strong>Please select region(s) of discomfort</strong></h3>
    </div>
    <div class="row">
        <div class="span2">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Selected Regions</th>
                    </tr>
                </thead>
                <tbody data-bind="foreach: selectedAreas">
                    <tr>
                        <td data-bind="text: name"></td>
                    </tr>
                </tbody>            
            </table>
        </div>
        <div class="span10">
            <ul id="skeleton" data-bind="foreach: symptomaticRegions" class="img-rounded">
                <li data-bind="attr: { id: name }, click: $parent.selectArea, event: { mouseover: $parent.areaMouseOver, mouseout: $parent.areaMouseOut}" />
            </ul>
        </div>
    </div>
    <div class="row examine-bottom-nav">
        <div class="span2 pull-right">
            <a class="btn btn-inverse btn-large" href="#detail" >Next &raquo;</a>
        </div>
    </div>
</div>
        
    <div id="examine-detail" class="view container">
        <div class="tabbable tabs-left" id="differentialDiagnosis">
            <ul id="examine-detail-tab-nav" class="nav nav-tabs" data-bind="foreach: selectedAreas">
                <li><a data-bind="attr: { href: '#tab-' + id(), title: name }, text: name " data-toggle="tab"></a></li>
            </ul>
            <section id="examine-detail-container" data-bind="template: { name: areaTemplate, afterRender: postTabRender, foreach: selectedAreas }" class="tab-content examine-tab-pane"></section>
        </div>
        <div class="row examine-bottom-nav">
            <div class="span2 pull-left">
                <a class="btn btn-inverse btn-large" href="javascript:history.back()" >&laquo; Back</a>
            </div>
            <div class="span2 pull-right">
                <button class="btn btn-inverse btn-large" data-bind="click: submitDiscomfortDetail" >Next &raquo;</button>
            </div>
        </div>
    </div>
    
    
    <div id="examine-report" class="view container">
        <div>
            <h3><strong>Potential Injuries</strong></h3>
        </div>
        <div class="tabbable tabs-left" id="injuryReport">
            <ul id="examine-report-tab-nav" class="nav nav-tabs" data-bind="foreach: injuries">
                <li><a data-bind="attr: { href: '#tab-' + id(), title: commonName }, text: commonName " data-toggle="tab"></a></li>
            </ul>
            <section id="examine-report-container" data-bind="template: { name: injuryTemplate, afterRender: postTabRender, foreach: injuries }" class="tab-content examine-tab-pane"></section>
        </div>
    </div>
</div>


<input type="hidden" id="skeleton-areas" value="@Html.Raw(Json.Encode(Model.SymptomaticRegions))" />



