    <div class="view container" id="admin-cause-panel">
            <h2> Causes</h2>
            <hr class="examine-report-hr"/>
            <div class="row">
                <div class="col-md-7">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Category</th>
                                <th>Filter</th>
                            </tr>
                        </thead>
                        <tbody data-bind="foreach: causes">
                            <tr>
                                <td data-bind="text:description"></td>
                                <td data-bind="text:category"></td>
                                <td data-bind="text:filter().filterCategory"></td>
                                <td><button class="btn-primary" data-bind="click: $parent.bindSelectedCause">Edit</button></td>
                            </tr>
                        </tbody>            
                    </table>
                </div>
                <div class="col-md-5 well">
                    <form class="form-horizontal" data-bind="validateForm: causeValidationOptions" id="admin-cause-form">
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="inputDescription">Description</label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control" id="inputDescription" name="description" data-bind="value: selectedCause.description" placeholder="Description">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="inputCategory">Category</label>
                            <div class="col-lg-9">
                                <select id="inputCategory" name="category" class="form-control" data-bind="options: availableCategories, value: selectedCause.category" >
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-lg-3" for="inputCategory">Filter</label>
                            <div class="col-lg-9">
                                <select id="inputGroup" name="group" class="form-control" data-bind="options: availableCauseFilters, optionsText: 'filterCategory', optionsValue: 'id', value: selectedCause.filterId" >
                                </select>
                            </div>
                       </div>
                        <div class="text-center">
                          <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                     </form>
                </div>
            </div>
    </div>