@model SportsWebPt.Platform.Web.Admin.AdminIndexViewModel
@{
    Model.AreaBundles.Add("~/bundles/adminapplib");
    Layout = "~/Areas/Main/Views/Shared/_masterLayout.cshtml";
}

<div>
    <h2>Admin</h2>
</div>

<div class="row-fluid content-container-panel" id="admin-main-panel">
    
    <div class="view container" id="admin-nav-panel">
        <div class="row">
            <div class="span1">
                <a href="#videos">Videos</a>
            </div>
            <div class="span1">
                <a href="#exercises">Exercises</a>
            </div>
            <div class="span1">
                <a href="#equipment">Equipment</a>
            </div>

        </div>
    </div>

    <div class="view container" id="admin-video-panel">
        <div class="container">
            <h2> Videos</h2>
            <hr class="examine-report-hr"/>
        </div>
    </div>
    
    <div class="view container" id="admin-exercise-panel">
        <div class="container">
            <h2> Exercises</h2>
            <hr class="examine-report-hr"/>
        </div>
    </div>
    
    <div class="view span12" id="admin-equipment-panel">
            <h2> Equipment</h2>
            <hr class="examine-report-hr"/>
        <div class="row-fluid">
            <div class="span7">
                <table class="table table-striped">
                    <tbody data-bind="template: { name: equipmentListTemplate, foreach: equipment}">
                    </tbody>            
                </table>
            </div>
            <div class="span5 well">
                <form class="form-horizontal">
                    <div class="control-group">
                        <label class="control-label" for="inputCommonName">Common Name</label>
                        <div class="controls">
                            <input type="text" id="inputCommonName" data-bind="value: selectedEquipment.commonName" placeholder="Common Name">
                        </div>
                   </div>
                    <div class="control-group">
                        <label class="control-label" for="inputTechnicalName">Technical Name</label>
                        <div class="controls">
                            <input type="text" id="inputTechnicalName" data-bind="value: selectedEquipment.technicalName" placeholder="Tech Name">
                        </div>
                   </div>
                    <div class="control-group">
                        <label class="control-label" for="inputVendorName">Vendor</label>
                        <div class="controls">
                            <input type="text" id="inputVendorName" data-bind="value: selectedEquipment.recommendedVendor" placeholder="Vendor">
                        </div>
                   </div>
                    <div class="control-group">
                        <label class="control-label" for="inputVendorLink">Vendor Link</label>
                        <div class="controls">
                            <input type="text" id="inputVendorLink" placeholder="Vendor URL">
                        </div>
                   </div>
                    <div class="control-group">
                        <label class="control-label" for="inputPriceRange">Price Range</label>
                        <div class="controls">
                            <input type="text" id="inputPriceRange" data-bind="value: selectedEquipment.priceRange" placeholder="Price Range">
                        </div>
                   </div>
                    <div class="form-actions">
                      <button type="submit" data-bind="click: saveChanges" class="btn btn-primary">Save changes</button>
                      <button type="button" class="btn">Cancel</button>
                    </div>
                 </form>
            </div>
            </div>
    </div>
</div>
