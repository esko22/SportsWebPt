@using System.Web.Optimization
@using SportsWebPt.Platform.Web.Application
@model BaseViewModel
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>SportsWebPT</title>
        <script type="text/javascript" src="//cdn.sublimevideo.net/js/jkmwb037.js"></script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body id="body-content">
        <div id="busyindicator"></div>

        <input type="hidden" id="userid" value="@Model.User.id"/>
        <input type="hidden" id="username" value="@Model.User.userName"/>
        <input type="hidden" id="userEmail" value="@Model.User.emailAddress"/>

        <div class="container">
            @{Html.RenderPartial("~/Areas/Main/Views/Shared/_masterHeader.cshtml"); }
            @RenderBody()
        </div>

        @{Html.RenderPartial("~/Areas/Main/Views/Shared/_masterFooter.cshtml"); }
        @Html.AntiForgeryToken()

        @Scripts.Render(
            "~/bundles/jquery",
            "~/bundles/jsextlibs",
            "~/Scripts/libs/require.js",
            "~/bundles/baseapplib",
            "~/bundles/sharedapplib",
            "~/bundles/utils",
            "~/bundles/models")
        @Scripts.Render(Model.AreaBundles.ToArray())
        @Scripts.Render("~/Scripts/main.js")
    </body>
</html>

