@using System.Web.Optimization

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>SportsWebPT</title>
    
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <div class="container">
            @{Html.RenderPartial("~/Areas/Main/Views/Shared/_masterHeader.cshtml"); }
            @RenderBody()
            <hr>
            <footer>
                <p>&copy; SportsWebPT 2013</p>
            </footer>
        </div>
        
        <div id="signInDialog" class="modal hide fade" tabindex="-1" role="dialog">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 id="signInLabel">Sign In To SportsWebPt</h4>
            </div>
            <div class="modal-body">
                <form>
                   <p>Lets log your ass in…</p>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal">Close</button>
                <button class="btn btn-primary">Save changes</button>
            </div>
        </div>
        
        <div id="signUpDialog" class="modal hide fade" tabindex="-1" role="dialog">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 id="signUpLabel">Sign up for SportsWebPt</h4>
          </div>
            <div class="modal-body">
                <p>Lets sign your ass up....</p>
                <button class="btn btn-primary">Sign Up</button>
            </div>
        </div>

        @Scripts.Render(
            "~/bundles/jquery", 
            "~/bundles/jsextlibs", 
            "~/Scripts/libs/require.js", 
            "~/bundles/jsapplibs",
            "~/Scripts/main.js"
             )

    </body>
</html>

