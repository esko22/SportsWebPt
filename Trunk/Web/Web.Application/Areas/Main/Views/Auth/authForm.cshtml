        @Scripts.Render(
        
            "~/bundles/jquery",
            "~/bundles/jsextlibs",
            "~/Scripts/libs/require.js",
            "~/bundles/baseapplib",
            "~/bundles/sharedapplib",
            "~/bundles/utils",
